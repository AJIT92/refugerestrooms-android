<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:background="@color/light_purple"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="8dp"
        android:orientation="vertical" >
        
        <TextView
            android:id="@+id/text"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView android:id="@+id/score"
                android:padding="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_weight="1" />
            <View
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1" /> 
            
            <ImageView
                android:id="@+id/unisex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:contentDescription="@string/unisex"
                android:visibility="gone"
                android:src="@drawable/unisex" />

            <ImageView
                android:id="@+id/accessible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:contentDescription="@string/accessible"
                android:visibility="gone"
                android:src="@drawable/accessible" />

        </LinearLayout>
        


    </LinearLayout>

</ScrollView>